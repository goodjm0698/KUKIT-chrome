{
    "manifest_version": 3,
    "name": "KUkit",
    "version": "1.0",
    "description": "고려대 안암캠퍼스 웹사이트 바로가기",
    "icons": {
        "16": "./icons/koreauniv.png",
        "48": "./icons/koreauniv.png",
        "128": "./icons/koreauniv.png"
    },
    "action": {
        "default_popup": "./popup/index.html",
        "default_icon": {
            "16": "./icons/koreauniv.png"
        }
    },

  "optional_host_permissions": [
    "http://*.korea.ac.kr/*",
        "https://*.korea.ac.kr/*",
        "https://github.com/*"
  ]
}